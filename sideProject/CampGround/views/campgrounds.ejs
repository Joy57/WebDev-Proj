<%include partials/header%>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Campground</h1>
            <p>View all the cool camps</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campgrounds</a>
            </p>
        </div>
    </header>

        <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <% camps.forEach(function(camps){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camps.image%>">     
                    <div class="caption"><h4><%=camps.name%></h4></div> 
                </div>
            </div>  
            <% }); %>
        </div>
    <%include partials/footer%>
</div>